{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "watch DomeGym.Domain.UnitTests",
			"file": "D:\\study projects\\DDDProject\\DomeGym\\DomeGym.Domain.UnitTests\\DomeGym.Domain.UnitTests.csproj",
			"problemMatcher": [
				"$msCompile"
			],
			"label": "dotnet: watch DomeGym.Domain.UnitTests",
			"group": {
				"kind": "test",
				"isDefault": true
			}
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/DomeGym.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/DomeGym.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/DomeGym.sln"
            ],
            "problemMatcher": "$msCompile"
        }
	]
}